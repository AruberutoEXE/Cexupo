<validators>
    <field name="nombre">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Name field is mandatory.</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">40</param>
            <param name="trim">true</param>
            <message>40 characters maximum</message>
        </field-validator>
    </field>
    <field name="desc">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Description field is mandatory.</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">255</param>
            <param name="trim">true</param>
            <message>255 characters maximum</message>
        </field-validator>
    </field>
    <field name="estado">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Product's condition field is mandatory.</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">40</param>
            <param name="trim">true</param>
            <message>40 characters maximum</message>
        </field-validator>
    </field>
    <field name="precio">
        <field-validator type="required">
            <message>Price field is mandatory.</message>
        </field-validator>
    </field>
    <field name="hashtag">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Hashtag field is mandatory.</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="maxLength">255</param>
            <param name="trim">true</param>
            <message>255 characters maximum</message>
        </field-validator>
    </field>
</validators>
