<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="nombre">
        <field-validator type="stringlength">
            <param name="maxLength">40</param>
            <param name="trim">true</param>
            <message>40 characters maximum</message>
        </field-validator>
    </field>
    <field name="desc">
        <field-validator type="stringlength">
            <param name="maxLength">255</param>
            <param name="trim">true</param>
            <message>255 characters maximum</message>
        </field-validator>
    </field>
    <field name="estado">
        <field-validator type="stringlength">
            <param name="maxLength">40</param>
            <param name="trim">true</param>
            <message>40 characters maximum</message>
        </field-validator>
    </field>
    <field name="hashtag">
        <field-validator type="stringlength">
            <param name="maxLength">255</param>
            <param name="trim">true</param>
            <message>255 characters maximum</message>
        </field-validator>
    </field>
</validators>
